{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts"],
  "$schema": "https://json.schemastore.org/tsconfig"
}
